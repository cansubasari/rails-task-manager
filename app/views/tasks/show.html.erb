<h2><%= @task.title %></h2>

<p><%= @task.details %></p>

<p>Completed:<%= @task.completed ? 'Yes' : 'No'%></p>

<%= link_to "Edit task", edit_path(@task)%>
<%= link_to "Back to List", tasks_path %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
